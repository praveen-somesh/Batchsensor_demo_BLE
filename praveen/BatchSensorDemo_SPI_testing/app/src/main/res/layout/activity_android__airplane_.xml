<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/vj_icon"
    android:orientation="vertical"
    android:weightSum="1">


    <Button
        android:id="@+id/button2"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:text="Start Demo"
        android:background="@drawable/buttonstyle"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/space2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ble_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      "
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#990000"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/textView6"
        android:layout_centerHorizontal="true" />
    <Space android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/space2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      "
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/textView6"
        android:layout_weight="0.52"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <ListView android:id="@id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:drawSelectorOnTop="false"
        android:layout_above="@+id/airplane"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/airplane"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@raw/airplane_1"
        android:layout_above="@+id/myimagelattice"
        android:layout_alignStart="@+id/myimagelattice" />

    <ImageView
        android:id="@+id/myimagelattice"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/lattice_logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
