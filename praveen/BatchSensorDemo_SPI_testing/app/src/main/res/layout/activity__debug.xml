<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >

    <Space
        android:layout_width="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Airplane_Demo Debug Only"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Space
        android:layout_width="5dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/demo_debug_finish"
        android:layout_width="84dp"
        android:layout_height="37dp"
        android:layout_gravity="right"
        android:background="@drawable/buttonstyle"
        android:text="Finish" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:orientation="horizontal"
        android:layout_marginLeft="20px"
        android:layout_gravity="center" >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30px"
            android:text="ADDR_H"
            android:textColor="@color/black"
            android:textSize="18sp" />

        >

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="ADDR_L"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Value"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30px"
        android:layout_marginTop="10px"
        android:layout_gravity="center" >

        <EditText
            android:id="@+id/addr_h"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text = "00"
            android:background="#ffffffff"
            android:textColor="#ff000000" />
        android:selectAllOnFocus="true"/>


        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/addr_l"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text = "0a"
            android:background="#ffffffff"
            android:textColor="#ff000000" />
        android:selectAllOnFocus="true"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/addr_value"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text = "01"
            android:background="#ffffffff"
            android:textColor="#ff000000" />
        android:selectAllOnFocus="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10px"
        android:layout_marginTop="40px"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/demo_read"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonstyle"
            android:text="read" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/demo_write"
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:background="@drawable/buttonstyle"
            android:text="write" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/demo_clear_log"
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:background="@drawable/buttonstyle"
            android:text="Clear" />

    </LinearLayout>




    <ScrollView
        android:id="@+id/scrollView"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:background="#ffffffff"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideOverlay"
        android:fillViewport="false">

        <TextView
            android:id="@+id/demo_debug_log"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="#ffffffff"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text=""
            android:textColor="#FF000000"
            android:textSize="15dp" />

    </ScrollView>

</LinearLayout>
