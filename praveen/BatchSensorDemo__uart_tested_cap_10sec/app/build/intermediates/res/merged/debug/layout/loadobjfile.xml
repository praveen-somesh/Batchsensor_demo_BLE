<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vj_icon"
    android:weightSum="1">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />
    <Button
        android:id="@+id/startprogress"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginTop="31dp"
        android:text="Airplane"
        android:background="@drawable/buttonstyle_yel"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/button_calib"
        android:layout_centerHorizontal="true" />


    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:id="@+id/space" />

    <ProgressBar
        android:id="@+id/progressbar_Horizontal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:progressDrawable="@drawable/progress_bar"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/startprogress"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
    <ProgressBar
        android:id="@+id/progressbar_Horizontal2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:progressDrawable="@drawable/progress_bar"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/startprogress"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/command_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="38dp"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000"
        android:textSize="16dp"
        android:textStyle="bold" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#376A8D"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/progressbar_Horizontal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ble_status1"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:text="  CONNECTED "
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#990000"
        android:gravity="center_horizontal"
        android:layout_above="@+id/button_exit"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_calib"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Calibration"
        android:background="@drawable/buttonstyle_yel"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/space"
        android:layout_alignStart="@+id/startprogress"
        android:checked="true" />
    <TextView
        android:layout_width="315dp"
        android:layout_height="30dp"
        android:id="@+id/textView4"
        android:text="  "
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="50px"
        android:textColor="#990000"
        android:layout_above="@+id/button_exit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp" />

    <TextView
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:id="@+id/textView3"
        android:text="  "
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="50px"
        android:textColor="#990000"
        android:layout_alignBottom="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/progressbar_Horizontal" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Go Back"
        android:background="@drawable/buttonstyle_yel"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLE State:"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/ble_status1"
        android:layout_toStartOf="@+id/button_exit" />


</RelativeLayout>